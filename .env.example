# Example .env file for the application
# Copy this file to .env and replace the placeholder values with your actual configuration settings.

# Secret key for Flask application security
SECRET_KEY=your-secret-key-here

# Database connection string
DATABASE_URL=sqlite:////app/db/db.sqlite3

# Celery configuration for task queue
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CSRF secret key for form protection (should be different from SECRET_KEY)
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# Admin user credentials for initial setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here


# REMOTE SERVER for copying images
REMOTE_USERNAME=your-remote-username
REMOTE_SERVER=your-remote-server-ip
CONTAINER_NAME=your-container-name
REMOTE_PATH=your-remote-path
DRY_RUN=false  # Set to true for testing, false for actual upload